
.label-1 {
    margin-bottom: 10px;
    margin-left: 50px;
}
.label-1__text {
    display: inline-block;
    vertical-align: middle;
    font-size: 15px;
}

.label-1__icon {
    position: relative;
    margin-right: 10px;
    display: inline-block;
    vertical-align: middle;
    width: 16px;
    height: 16px;
    background: #fcfff4;
}

.label-1__icon-checked {
    position: absolute;
    top: 3px;
    left: 3px;
    width: 12px;
    height: 12px;
    background: #1aad19;
}

.hint {
  margin-top: 60px;
  font-size: 16px;
  padding-left: 50px;
  background-color: #FFE4E1
}

.btn-area {
  margin-left: 50px;
}

.submit{
  margin-top: 5px;
  width: 70px;
  height: 40px;
  text-align: center;
  line-height: 40px;
  font-size: 16px;
  border-radius: 50%;
  color: #7B68EE;
  float: left;
}
